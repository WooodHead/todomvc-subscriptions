{
  "name": "@todomvc-subscriptions/server",
  "version": "1.0.0",
  "description": "",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "license": "MIT",
  "bin": "bin/server.js",
  "scripts-info": {
    "knex": "ES6 CLI",
    "migrate": "Database migrate",
    "seed": "Database seed",
    "start": "Livereload Dev server",
    "build": "Build CJS package with babel",
    "pkg": "Binary file for production"
  },
  "scripts": {
    "knex": "babel-node node_modules/.bin/knex",
    "migrate": "npm run knex -- migrate:latest --env production",
    "seed": "npm run knex -- seed:run  --env production",
    "start": "nodemon src/index.js --watch src --exec babel-node",
    "build": "rm -rf lib && babel src -d lib --ignore __tests__",
    "pkg":
      "rm -rf pkg && pkg . --debug --targets node9-linux-x64,node9-macos-x64 --out-path pkg"
  },
  "dependencies": {
    "@todomvc-subscriptions/constants": "^1.0.0",
    "dotenv": "^4.0.0",
    "graphql-yoga": "^0.4.6",
    "knex": "^0.14.2",
    "ramda": "^0.25.0",
    "sqlite3": "^3.1.13"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.36",
    "@babel/core": "^7.0.0-beta.36",
    "@babel/node": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "babel-plugin-add-module-exports": "^0.2.1",
    "flow-bin": "^0.61.0",
    "nodemon": "^1.14.3",
    "pkg": "^4.3.0-beta.5"
  },
  "pkg": {
    "assets": ["migrations/**", "seeds/**"],
    "scripts": "lib/**/*.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": ["babel-plugin-add-module-exports"]
  }
}
